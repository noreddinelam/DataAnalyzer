<View>:
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (740, 580)
        play: True
    Label:
        text:
        size_hint_y: None
        height: '48dp'
        opacity: 0
        disabled: True
    Button:
        id: capture_btn
        text: 'Capture'
        size_hint_y: None
        height: '48dp'
        on_press: root.capture()
    Button:
        id: retry_btn
        text: 'Retry'
        size_hint_y: None
        height: '48dp'
        on_press: root.retry()
        opacity: 0
        disabled: True